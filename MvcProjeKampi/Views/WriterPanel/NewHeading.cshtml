@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post)) //ne için yapıyorsun, controller ismi, başlama zamanı
{
    <div class="form-group">
        @Html.Label("başlık adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })dropdown devamı controllerdaki
        <br />
        <button class="btn btn-info">başlığı oluştur</button>
    </div>
}

